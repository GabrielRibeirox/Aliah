@model VaiCaralhoMVC.Models.PlanoMoeda

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutAdm.cshtml";
}

<h2 class="text-center">Moedas</h2>

<p>
    @Html.ActionLink("Criar moedas", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Nome </label>
        </th>
        <th>
            <label>Quantidade </label>
        </th>
        <th>
            <label>Valor </label>
        </th>
        <th>
            <label>Validade </label>
        </th>
        @*<th>
            <label>Status </label>
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model.Moedas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
				
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validade)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>*@
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
