@model IEnumerable<VaiCaralhoMVC.Models.Faq>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/LayoutAdm.cshtml";
}
<div class="col-md-12 text-center">
	<h3>
		<span class="fa fa-drivers-license-o"></span>
		@Html.ActionLink("Cadastro de Duvidas", "Create", new { @class = "btn btn-primary", style = "color: Red" })
	</h3>
</div>
<div class="col-md-12">
	<div class="row">
		@foreach (var item in Model)
		{

			<div class="card col-md-3 mr-4 mt-3">
				<div class="card-body text-center border-white">
					<ul class="list-group">
						<li class="list-group-item"><span class="fa fa-check" aria-hidden="true" style="color:deepskyblue"></span> Pergunta: @Html.DisplayFor(modelItem => item.Pergunta)</li>

						<li class="list-group-item"><span class="fa fa-check" aria-hidden="true" style="color:deepskyblue"></span> Resposta: @Html.DisplayFor(modelItem => item.Resposta)</li>
						<li class="list-group-item off">
							@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "fa fa-edit" })|
							@*@Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "fa fa-address-card-o" })|*@
							@Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "fa fa-trash" })
						</li>
					</ul>
				</div>
			</div>


		}
	</div>
</div>

<div class="col-md-12 text-center">

</div>





